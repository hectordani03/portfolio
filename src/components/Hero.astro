<style>
    /* AnimaciÃ³n de lÃ­nea que se desplaza por el perÃ­metro */
    .border-line {
        position: relative;
        border: 2px solid #ffffff33;
        border-radius: 0.75rem;
        overflow: hidden;
    }
    
    .border-line::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #ffffff, transparent);
        animation: borderLineTop 2s linear infinite;
    }
    
    .border-line::after {
        content: '';
        position: absolute;
        bottom: 0;
        right: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #a2a2a2, transparent);
        animation: borderLineBottom 2s linear infinite 1s;
    }
    
    @keyframes borderLineTop {
        0% { left: -100%; }
        50%, 100% { left: 100%; }
    }
    
    @keyframes borderLineBottom {
        0% { right: -100%; }
        50%, 100% { right: 100%; }
    }

    /* Responsive adjustments */
    @media (max-width: 640px) {
        .section {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }
</style>

<script>
  const copyBtn = document.getElementById('copy-email-btn');
  const emailText = document.getElementById('email-text')?.innerText;
  const alertBox = document.getElementById('copy-alert');

  copyBtn?.addEventListener('click', () => {
    if (emailText) {
      navigator.clipboard.writeText(emailText)
        .then(() => {
          alertBox?.classList.add('opacity-100');
          alertBox?.classList.remove('opacity-0');

          setTimeout(() => {
            alertBox?.classList.remove('opacity-100');
            alertBox?.classList.add('opacity-0');
          }, 2000);
        })
        .catch(err => {
          console.log("Error al copiar", err);
        });
    }
  });
</script>