<header
  class="fixed w-full top-0 z-50 backdrop-blur-md text-white flex justify-between items-center px-4 sm:px-6 md:px-8 lg:px-12 xl:px-20 py-3 transition-all duration-300"
>
  <!-- Logo/Brand -->
  <h1 class="text-lg sm:text-xl md:text-2xl font-bold ml-1 sm:ml-2 md:ml-5">
    &lt; <span>Hector Martinez</span> /&gt;
  </h1>

  <!-- Botón menú móvil -->
  <button 
    id="mobile-menu-button" 
    class="md:hidden cursor-pointer p-2 hover:bg-white/10 rounded-lg transition-colors duration-200"
    aria-label="Toggle mobile menu"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 32 32" class="sm:w-8 sm:h-8">
      <path fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h22M5 16h22M5 24h22"/>
    </svg>
  </button>

  <!-- Menú navegación -->
  <nav 
    id="menu" 
    class="hidden md:flex absolute md:static top-full left-0 w-full md:w-auto bg-black/40 md:bg-transparent backdrop-blur-md md:backdrop-blur-none transition-all duration-300 ease-in-out mr-2 md:mr-4 lg:mr-6 xl:mr-10 shadow-lg md:shadow-none"
  >
    <ul class="flex flex-col md:flex-row w-full md:w-auto gap-0 md:gap-2 lg:gap-3 xl:gap-4">
      <li class="border-b border-white/10 md:border-none">
        <a 
          href="#home" 
          class="scroll-link block px-6 py-4 md:px-3 md:py-2 lg:px-4 lg:py-2 text-center md:text-left text-sm md:text-base font-semibold hover:bg-white/10 md:hover:bg-transparent md:hover:scale-105 transition-all duration-200 rounded-none md:rounded-lg"
        >
          Home
        </a>
      </li>
      <li class="border-b border-white/10 md:border-none">
        <a 
          href="#experience" 
          class="scroll-link block px-6 py-4 md:px-3 md:py-2 lg:px-4 lg:py-2 text-center md:text-left text-sm md:text-base font-semibold hover:bg-white/10 md:hover:bg-transparent md:hover:scale-105 transition-all duration-200 rounded-none md:rounded-lg"
        >
          Experience
        </a>
      </li>
      <li class="border-b border-white/10 md:border-none">
        <a 
          href="#projects" 
          class="scroll-link block px-6 py-4 md:px-3 md:py-2 lg:px-4 lg:py-2 text-center md:text-left text-sm md:text-base font-semibold hover:bg-white/10 md:hover:bg-transparent md:hover:scale-105 transition-all duration-200 rounded-none md:rounded-lg"
        >
          Projects
        </a>
      </li>
      <li class="border-b border-white/10 md:border-none">
        <a 
          href="#skills" 
          class="scroll-link block px-6 py-4 md:px-3 md:py-2 lg:px-4 lg:py-2 text-center md:text-left text-sm md:text-base font-semibold hover:bg-white/10 md:hover:bg-transparent md:hover:scale-105 transition-all duration-200 rounded-none md:rounded-lg"
        >
          Skills
        </a>
      </li>
      <li>
        <a 
          href="#about-me" 
          class="scroll-link block px-6 py-4 md:px-3 md:py-2 lg:px-4 lg:py-2 text-center md:text-left text-sm md:text-base font-semibold hover:bg-white/10 md:hover:bg-transparent md:hover:scale-105 transition-all duration-200 rounded-none md:rounded-lg"
        >
          About me
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('menu');
  const scrollLinks = document.querySelectorAll('.scroll-link');

  // Toggle mobile menu
  mobileMenuButton?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  scrollLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth < 768) { // md breakpoint
        menu?.classList.add('hidden');
      }
    });
  });

  // Close mobile menu when resizing to desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) { // md breakpoint
      menu?.classList.remove('hidden');
    } else {
      menu?.classList.add('hidden');
    }
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (window.innerWidth < 768 && 
        !mobileMenuButton?.contains(e.target) && 
        !menu?.contains(e.target)) {
      menu?.classList.add('hidden');
    }
  });
</script>