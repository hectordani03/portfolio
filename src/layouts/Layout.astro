---
import './src/styles/global.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<script>
			//ScrollSpy
			const d = document
			d.addEventListener('DOMContentLoaded', ()=>{
				const sections = d.querySelectorAll('section')
				const navLinks = d.querySelectorAll('.scroll-link')

				function onScroll() {
					let current = ''

					sections.forEach(section => {
						const sectionTop = section.offsetTop -80
						const sectionHeight = section.clientHeight
						if (scrollY >= sectionTop && scrollY < sectionTop * sectionHeight) {
							current = section .getAttribute('id')
						}
					})
					
					navLinks.forEach(link => {
						link.classList.remove('scale-110', 'text-neutral-400');
						link.classList.add('text-white');

						if (link.getAttribute('href') === `#${current}`) {
							link.classList.add('scale-110', 'text-neutral-400');
							link.classList.remove('text-white');
						}
					});

				}
				window.addEventListener('scroll', onScroll)
			})
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		min-height: 100%;
		background: linear-gradient(0deg, rgba(5, 5, 10, 1.000) 0.000%, rgba(9, 10, 14, 1.000) 8.333%, rgba(13, 14, 18, 1.000) 16.667%, rgba(18, 19, 22, 1.000) 25.000%, rgba(22, 23, 26, 1.000) 33.333%, rgba(26, 27, 30, 1.000) 41.667%, rgba(30, 31, 34, 1.000) 50.000%, rgba(34, 35, 38, 1.000) 58.333%, rgba(38, 39, 42, 1.000) 66.667%, rgba(41, 42, 45, 1.000) 75.000%, rgba(44, 45, 48, 1.000) 83.333%, rgba(46, 47, 51, 1.000) 91.667%, rgba(48, 49, 53, 1.000) 100.000%);
		color: white;
		scroll-behavior: smooth;
		overflow-x: hidden;
	}
</style>
